{
  "name": "minimal-npm-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "serve": "browser-sync start --server ./public --files '**/*.*'",
    "css:scss": "node-sass --output-style compressed --source-map-root public/assets/css --source-map-embed true ./assets/scss/common.scss > ./public/assets/css/common.css",
    "css:comb": "csscomb ./assets/scss/*/*.scss",
    "css:prefix": "postcss -u autoprefixer --autoprefixer.browsers '> 5%' -r ./public/assets/css/*",
    "imagemin": "imagemin ./assets/img/* -o ./public/assets/img",
    "build:css": "npm run css:scss && npm run css:prefix",
    "build:pug": "pug --hierarchy --pretty -o ./public ./assets/tmpl; find ./public -name '_*.html' | xargs rm -rf & find ./public -name '*inc*' -type d | xargs rm -rf",
    "build:js": "browserify ./assets/js/*.js | uglifyjs -m > ./public/assets/js/main.js",
    "build": "npm run build:pug & npm run css:comb & npm run build:css & npm run build:js",
    "watch:js": "watch 'npm run build:js' ./assets/js/",
    "watch:pug": "watch 'npm run build:pug' ./assets/tmpl/",
    "watch:css": "watch 'npm run build:css' ./assets/scss/",
    "watch": "npm run watch:js & npm run watch:pug & npm run watch:css",
    "start": "npm run watch & npm run serve"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "browser-sync": "^2.18.12",
    "browserify": "^14.4.0",
    "csscomb": "^4.2.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.0",
    "pug": "^2.0.0-rc.2",
    "pug-cli": "^1.0.0-alpha6",
    "uglify-js": "^3.0.25",
    "watch": "^1.0.2"
  }
}
